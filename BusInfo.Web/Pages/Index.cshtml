@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Route Description</h3>
        </div>
        <div class="col-md-3">
            <h3>Route Code</h3>
        </div>
        <div class="col-md-3">
            <h3>Predicted Arrival</h3>
        </div>
    </div>

    @foreach (var route in Model.Routes)
    {
        <div class="row">
            <div class="col-md-6">
                @route.Description
            </div>
            <div class="col-md-3">
                @route.ShortName
            </div>
            <div class="col-md-3">
                @route.PredictedArrival
            </div>
        </div>
    }
</div>
